{
  "lookback_hours": 48,
  "min_duration_minutes": 10,
  "subtitle_language": "en",
  "subtitle_merge_interval": 30,

  "output_dir": "./ai_output",
  "archive_file": "./youtube_archive.json",
  "filename_max_length": 50,

  "claude_timeout_seconds": 600,
  "claude_model": "claude-sonnet-4-20250514",
  "claude_model_summary": "claude-opus-4-20250514",
  "claude_model_translate": "claude-sonnet-4-20250514",

  "min_chapter_duration": 180,
  "max_chapter_duration": 300,
  "fallback_chapter_interval": 300,
  "_comment_chapter": "章节配置：min 最小时长，max 最大时长，fallback_interval 无章节时的分割间隔（秒，300=5分钟）",
  "context_lines": 5,
  "translation_max_tokens": 4000,
  "translation_max_retries": 2,
  "translation_retry_delay": 5,

  "email_enabled": true,
  "check_interval_hours": 6,
  "_comment_loop": "持续运行模式：每隔 X 小时检测一次新视频。设为 0 表示只运行一次不循环",

  "use_agent": true,
  "agent_name": "tech-investment-analyst",
  "_comment_agent": "Agent 模式：use_agent 启用专业 Agent，agent_name 指定使用的 Agent（需在 .claude/agents/ 中定义）",

  "review_enabled": true,
  "review_remove_ai_garbage": true,
  "_comment_review": "审核模块：review_enabled 启用章节重组，review_remove_ai_garbage 用 haiku 删除 AI 废话（只删不改）"
}
